<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/notificatio"
        android:layout_width="419dp"
        android:layout_height="918dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/history"
        android:clipToOutline="true"
        tools:layout_editor_absoluteX="-4dp">

        <!-- FrameLayout as the container for the content -->
        <FrameLayout
            android:id="@+id/rectangle_1"
            android:layout_width="379dp"
            android:layout_height="562dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="219dp"
            android:layout_marginEnd="18dp"
            android:background="@drawable/historybg">

            <!-- ScrollView to enable scrolling content inside rectangle_1 -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical">

                <!-- LinearLayout inside ScrollView to stack the green square views vertically -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="0dp">

                    <!-- Green square views -->
                    <TextView
                        android:id="@+id/rectangle_2"
                        android:layout_width="351dp"
                        android:layout_height="64dp"
                        android:layout_marginLeft="31dp"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/greensqre"
                        android:gravity="center"
                        android:text="Your fund has been received"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/rectangle_3"
                        android:layout_width="351dp"
                        android:layout_height="64dp"
                        android:layout_marginLeft="31dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/greensqre"
                        android:gravity="center"
                        android:text="Your fund has been received"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/rectangle_4"
                        android:layout_width="351dp"
                        android:layout_height="64dp"
                        android:layout_marginLeft="31dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/greensqre"
                        android:gravity="center"
                        android:text="Your fund has been received"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/rectangle_5"
                        android:layout_width="351dp"
                        android:layout_height="64dp"
                        android:layout_marginLeft="31dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/greensqre"
                        android:gravity="center"
                        android:text="Your fund has been received"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/rectangle_6"
                        android:layout_width="351dp"
                        android:layout_height="64dp"
                        android:layout_marginLeft="31dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/greensqre"
                        android:gravity="center"
                        android:text="Your fund has been received"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />
                </LinearLayout>
            </ScrollView>
        </FrameLayout>

        <!-- ImageView and other components -->
        <ImageView
            android:id="@+id/your_image_view"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="34dp"
            android:src="@drawable/charify_two" />

        <View
            android:id="@+id/image_43"
            android:layout_width="88dp"
            android:layout_height="58dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="162dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/history_icon"
            android:elevation="4dp" />

        <View
            android:id="@+id/bckbttn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/back_button" />

        <TextView
            android:id="@+id/notification_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Angat Buhay"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/settings"
        android:layout_width="412dp"
        android:layout_height="848dp"
        android:background="@drawable/white_background"
        android:clipToOutline="true"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="0dp">

        <View
            android:id="@+id/hmebttnbg"
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:background="@drawable/home" />



        <ImageButton
            android:id="@+id/charify_bttn"
            android:layout_width="150dp"
            android:layout_height="129dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="130dp"
            android:layout_marginBottom="-17dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:contentDescription="Charify Word Logo"
            android:foregroundGravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/charify_word" />

        <ImageView
            android:id="@+id/charify_ogo"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="164dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="147dp"
            android:layout_marginBottom="660dp"
            android:contentDescription="Charify logo"
            android:src="@drawable/gear_black" />

        <View
            android:id="@+id/rectangle_1"
            android:layout_width="362dp"
            android:layout_height="401dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="296dp"
            android:background="@drawable/bgsquarewhite" />

        <ImageView
            android:id="@+id/charify_logo"
            android:layout_width="215dp"
            android:layout_height="108dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="112dp"
            android:layout_marginTop="400dp"
            android:layout_marginEnd="92dp"
            android:layout_marginBottom="583dp"
            android:contentDescription="Charify logo"
            android:src="@drawable/charify_two" />

        <ImageView
            android:id="@+id/settinglogout"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="161dp"
            android:layout_marginTop="421dp"
            android:layout_marginEnd="149dp"
            android:layout_marginBottom="772dp"
            android:contentDescription="Charify logo"
            android:src="@drawable/gear_black" />


        <ImageView
            android:id="@+id/image_2025_"
            android:layout_width="161dp"
            android:layout_height="161dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="148dp"
            android:layout_marginTop="298dp"
            android:background="@drawable/exit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="151dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="72dp"
            android:layout_marginTop="453dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="243dp"
            android:elevation="10dp"
            android:fontFamily="@font/nats"
            android:text="Oh no! You're leaving...                         Are You Sure?"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/logout_button"
            android:layout_width="194dp"
            android:layout_height="38dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="121dp"
            android:layout_marginTop="580dp"
            android:clickable="true"
            android:focusable="true">

            <!-- Background -->
            <View
                android:id="@+id/logoutbg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/logout_bggrn" />

            <!-- Horizontal layout for icon + text -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/logout_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="-88dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/logouticon" />

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cancel_button"
            android:layout_width="194dp"
            android:layout_height="38dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="121dp"
            android:layout_marginTop="630dp"
            android:clickable="true"
            android:focusable="true">

            <View
                android:id="@+id/cancelbg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cancelbg" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-8dp"
                android:elevation="10dp"
                android:fontFamily="@font/nats"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="180dp"
            android:layout_marginTop="-8dp"
            android:layout_marginEnd="148dp"
            android:layout_marginBottom="218dp"
            android:elevation="10dp"
            android:fontFamily="@font/nats"
            android:gravity="center"
            android:text="Logout"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold" />


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background2">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/notif_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:scrollbars="vertical" />

    <ImageView
        android:id="@+id/account_circle"
        android:layout_width="387dp"
        android:layout_height="177dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="12dp"
        android:contentDescription="Charify Word Logo"
        android:elevation="0dp"
        android:src="@drawable/account_circle" />

    <ImageView
        android:id="@+id/redcross"
        android:layout_width="374dp"
        android:layout_height="139dp"
        android:layout_marginTop="89dp"
        android:layout_marginLeft="18dp"
        android:contentDescription="Charify Word Logo"
        android:elevation="0dp"
        android:src="@drawable/redcross" />

    <ImageView
        android:id="@+id/notifbell"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="359dp"
        android:contentDescription="Charify Word Logo"

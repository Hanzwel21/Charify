<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="#5CCE61"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/organization_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:src="@drawable/kid" />

        <TextView
            android:id="@+id/organization_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/organization_icon"
            android:text="ORGANIZATION NAME"
            android:textColor="#000000"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/organization_description"
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/organization_name"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/organization_icon"
            android:text="Good Day! Mr. Admin: your donation is currently being processed..."
            android:textColor="#FFFFFF"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/request_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/organization_description"
            android:layout_marginStart="32dp"
            android:layout_marginTop="4dp"
            android:text="APRIL 23, 2024"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/accept_button"
            android:layout_width="95dp"
            android:layout_height="19dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"
            android:background="@drawable/accept"
            android:gravity="center"
            android:fontFamily="@font/nats"
            android:text="ACCEPT"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/reject_button"
            android:layout_width="96dp"
            android:layout_height="19dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/accept_button"
            android:layout_marginTop="4dp"
            android:background="@drawable/reject"
            android:gravity="center"
            android:fontFamily="@font/nats"
            android:text="REJECT"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textAlignment="center"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/white_background"
        android:contentDescription="@null" />

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="24dp"
        android:background="@android:color/transparent"
        android:src="?attr/actionModeCloseDrawable"
        android:contentDescription="Back" />

    <!-- REGISTER IN Text -->

    <!-- Logo Word -->

    <!-- FIRST NAME -->

    <TextView
        android:id="@+id/register_title"
        android:layout_width="267dp"
        android:layout_height="149dp"
        android:layout_below="@id/back_button"
        android:layout_marginStart="24dp"
        android:layout_marginTop="63dp"
        android:fontFamily="@font/nats"
        android:text="REGISTER IN"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/charify_word"
        android:layout_width="wrap_content"
        android:layout_height="148dp"
        android:layout_below="@id/register_title"
        android:layout_alignStart="@id/register_title"
        android:layout_marginStart="107dp"
        android:layout_marginTop="-134dp"
        android:contentDescription="Charify Word Logo"
        android:src="@drawable/charify_two" />

    <EditText
        android:id="@+id/first_name_input"
        android:layout_width="177dp"
        android:layout_height="58dp"
        android:layout_below="@id/charify_word"
        android:layout_marginStart="24dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/rounded_edittext"
        android:fontFamily="@font/nats"
        android:gravity="center_vertical|start"
        android:hint="FIRST NAME"
        android:inputType="textPersonName"
        android:paddingStart="16dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- LAST NAME -->
    <EditText
        android:id="@+id/last_name_input"
        android:layout_width="178dp"
        android:layout_height="58dp"
        android:layout_alignTop="@id/first_name_input"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
        android:background="@drawable/rounded_edittext"
        android:fontFamily="@font/nats"
        android:gravity="center_vertical|start"
        android:hint="LAST NAME"
        android:inputType="textPersonName"
        android:paddingStart="16dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Remaining Fields (Stacked Vertically) -->
    <EditText
        android:id="@+id/crt_usrn_input"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/first_name_input"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:hint="CREATE USERNAME"
        android:background="@drawable/rounded_edittext"
        android:fontFamily="@font/nats"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:paddingStart="16dp"
        android:textSize="20sp"
        android:inputType="textPersonName"
        android:gravity="center_vertical|start" />

    <EditText
        android:id="@+id/mbln_input"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/crt_usrn_input"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:hint="MOBILE NUMBER"
        android:background="@drawable/rounded_edittext"
        android:fontFamily="@font/nats"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:paddingStart="16dp"
        android:textSize="20sp"
        android:inputType="phone"
        android:gravity="center_vertical|start" />

    <EditText
        android:id="@+id/email_input"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/mbln_input"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:hint="EMAIL"
        android:background="@drawable/rounded_edittext"
        android:fontFamily="@font/nats"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:paddingStart="16dp"
        android:textSize="20sp"
        android:inputType="textEmailAddress"
        android:gravity="center_vertical|start" />

    <EditText
        android:id="@+id/psswrd_input"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/email_input"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:hint="PASSWORD"
        android:background="@drawable/rounded_edittext"
        android:fontFamily="@font/nats"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:paddingStart="16dp"
        android:textSize="20sp"
        android:inputType="textPassword"
        android:gravity="center_vertical|start" />

    <EditText
        android:id="@+id/cpsswrd_input"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/psswrd_input"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:hint="CONFIRM PASSWORD"
        android:background="@drawable/rounded_edittext"
        android:fontFamily="@font/nats"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:paddingStart="16dp"
        android:textSize="20sp"
        android:inputType="textPassword"
        android:gravity="center_vertical|start" />

    <!-- REGISTER Button -->
    <Button
        android:id="@+id/rgst_button"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="838dp"
        android:layout_marginEnd="145dp"
        android:backgroundTint="#000000"
        android:fontFamily="@font/nats"
        android:text="REGISTER"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>

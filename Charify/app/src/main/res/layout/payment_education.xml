<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Top Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="@drawable/greentopbg"
            android:padding="12dp"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="24dp"
                android:layout_height="31dp"
                android:background="@null"
                android:contentDescription="Back"
                android:src="@drawable/chevron_left" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:src="@drawable/charify_word"
                android:contentDescription="Charify Logo"
                android:elevation="6dp" />
        </LinearLayout>

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginTop="60dp">

            <TextView
                android:layout_width="183dp"
                android:layout_height="51dp"
                android:layout_marginLeft="115dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/nats"
                android:text="EDUCATION"
                android:textColor="#1A1A1A"
                android:textSize="34sp"
                android:textStyle="bold" />

            <!-- Amount Input -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₱"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/amount_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/donate"
                    android:fontFamily="@font/nats"
                    android:textSize="18sp"
                    android:hint="Enter Amount"
                    android:inputType="numberDecimal"
                    android:padding="10dp" />
            </LinearLayout>

            <!-- Payment Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="10dp">


                <Button
                    android:id="@+id/gcash_button"
                    android:layout_width="0dp"
                    android:layout_height="67dp"
                    android:layout_weight="1"
                    android:background="@drawable/gcashbg1"
                    android:drawableLeft="@drawable/gcash_icon_48x48"
                    android:drawablePadding="0dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:text="GCASH"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="28sp"
                    android:fontFamily="@font/nats" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:layout_width="181dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_button"
                    android:contentDescription="Maya Button"
                    android:padding="0dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/mayalogo" />
            </LinearLayout>

            <!-- Support Info -->

            <Button
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/credit"
                android:drawableLeft="@drawable/credit_card_48"
                android:drawablePadding="0dp"
                android:fontFamily="@font/nats"
                android:paddingStart="84dp"
                android:paddingEnd="24dp"
                android:text="CREDIT/DEBIT"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="6dp"
                android:text="Your support will help:\n\n• Build and renovate classrooms in underserved areas\n• Provide essential learning materials such as books, uniforms, and supplies\n• Train teachers and improve local teaching programs\n• Offer scholarships to children in extreme poverty\n• Create safe learning environments for girls and marginalized groups"
                android:textColor="#333333"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Bottom Image with Fade Transition -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="549dp">

            <!-- Background Image -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/educ_1"
                android:contentDescription="Classroom" />

            <!-- Gray to transparent gradient -->
            <View
                android:layout_width="match_parent"
                android:layout_height="139dp"
                android:layout_gravity="top"
                android:background="@drawable/education_img_fade" />
        </FrameLayout>

    </RelativeLayout>
</ScrollView>

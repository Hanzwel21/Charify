<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/white_background"
        android:contentDescription="@null" />

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="41dp"
        android:layout_height="36dp"
        android:layout_marginTop="0dp"
        android:contentDescription="@null"
        android:src="?attr/actionModeCloseDrawable"
        android:layout_marginLeft="24dp"
        android:layout_margin="24dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/register_in"
            android:layout_width="236dp"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="75dp"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/nats"
            android:gravity="center_horizontal|top"
            android:text="REGISTER IN"
            android:textColor="#000000"
            android:textSize="40sp"
            android:textStyle="bold|normal" />

        <ImageView
            android:id="@+id/charify_word"
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            android:layout_marginLeft="175dp"
            android:layout_marginTop="105dp"
            android:contentDescription="Charify Word Logo"
            android:elevation="0dp"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:src="@drawable/charify_two" />


        <FrameLayout
            android:layout_width="320dp"
            android:layout_height="82dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="483dp">

            <!-- Button background shape or color -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#5CCE61"
                android:background="@drawable/green_button_background" />

            <!-- SOLO ACCOUNT text -->

            <!-- DONATE TO CHARITY text -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="top|center_horizontal"
                android:fontFamily="@font/nats"

                android:paddingTop="10dp"
                android:text="SOLO ACCOUNT"
                android:textColor="#000000"
                android:textSize="26sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/nats"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:text="DONATE TO CHARITY"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />
        </FrameLayout>


        <FrameLayout
            android:layout_width="321dp"
            android:layout_height="82dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="580dp"
            android:background="@drawable/green_button_background">

            <TextView
                android:id="@+id/org_main_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nats"
                android:gravity="center"
                android:text="ORGANIZATION ACCOUNT"
                android:textColor="#000000"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/org_sub_text"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/nats"
                android:gravity="center"
                android:text="COLLECT AND SHARE DONATIONS WITH OTHER"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="bold" />
        </FrameLayout>

        <Button
            android:id="@+id/log_in_button"
            android:layout_width="99dp"
            android:layout_height="55dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="705dp"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#000000"
            android:fontFamily="@font/nats"
            android:text="LOG IN"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>


</FrameLayout>

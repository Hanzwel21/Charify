<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_background">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="?attr/actionModeCloseDrawable"
        android:contentDescription="Back button"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:padding="8dp"/>

    <View
        android:id="@+id/hmebttnbg"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="@drawable/home" />

    <TextView
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="123dp"
        android:layout_marginBottom="624dp"
        android:fontFamily="@font/nats"
        android:text="REQUEST's APPROVAL:"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/charify_bttn"
        android:layout_width="150dp"
        android:layout_height="129dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-15dp"
        android:background="@android:color/transparent"
        android:contentDescription="Charify Word Logo"
        android:scaleType="fitCenter"
        android:src="@drawable/charify_word"
        android:clickable="true"
        />

    <ImageView
        android:id="@+id/myImageView"
        android:layout_width="132dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="-60dp"
        android:layout_marginBottom="777dp"
        android:src="@drawable/charify_two" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="437dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="190dp"
        android:layout_marginBottom="80dp"
        app:cardBackgroundColor="#e8e8e8"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp">

        <!-- Scrollable Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="440dp"
            android:backgroundTint="#AFAFAF"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/organization_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Dynamic content will be loaded here by the adapter -->

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</RelativeLayout>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/white_background">

        <!-- Header -->
        <RelativeLayout
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/ic_profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Profile"
                android:src="@drawable/account_circle_black" />

            <ImageView
                android:id="@+id/ic_hexagon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="16dp"
                android:contentDescription="Settings"
                android:src="@drawable/gear_black" />

            <ImageView
                android:id="@+id/ic_notification"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toStartOf="@id/ic_hexagon"
                android:layout_marginEnd="16dp"
                android:contentDescription="Notifications"
                android:src="@drawable/notif_bell" />
        </RelativeLayout>

        <!-- Greeting -->
        <TextView
            android:id="@+id/text_greeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="16dp"
            android:text="HELLO!"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:fontFamily="@font/nats" />

        <!-- Fundraiser Title -->
        <TextView
            android:id="@+id/myfundraiser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginStart="20dp"
            android:text="My Fundraisers:"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:fontFamily="@font/nats" />

        <!-- Background rectangle_ behind scrollable content -->
        <View
            android:id="@+id/rectangle_"
            android:layout_width="match_parent"
            android:layout_height="507dp"
            android:layout_marginTop="140dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/orgmnu_bgwhte" />

        <!-- Scrollable content inside rectangle_ -->
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="507dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="140dp"
            android:layout_marginEnd="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- Fundraiser 1 -->
                <RelativeLayout
                    android:id="@+id/rectangle_fundraiser_1"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/green_rectangle">

                    <TextView
                        android:id="@+id/text_fundraiser1_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/nats"
                        android:text="Cancer Patients"
                        android:textColor="#000000"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_fundraiser1_total_donated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_fundraiser1_title"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/nats"
                        android:text="Total Donated:"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/text_fundraiser1_expiry_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:fontFamily="@font/nats"
                        android:text="Ends: June 09, 2025"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/text_fundraiser1_total_goal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_fundraiser1_total_donated"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/nats"
                        android:text="₱ 25,039.00 / ₱ 50,000.00"
                        android:textColor="#000000"
                        android:textSize="18sp" />
                </RelativeLayout>

                <!-- Fundraiser 2 -->
                <RelativeLayout
                    android:id="@+id/rectangle_fundraiser_2"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/green_rectangle">

                    <TextView
                        android:id="@+id/text_fundraiser2_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/nats"
                        android:text="Starving Children"
                        android:textColor="#000000"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_fundraiser2_total_donated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_fundraiser2_title"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/nats"
                        android:text="Total Donated:"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/text_fundraiser2_expiry_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:fontFamily="@font/nats"
                        android:text="Ends: July 03, 2025"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/text_fundraiser2_total_goal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_fundraiser2_total_donated"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/nats"
                        android:text="₱ 12,298.00 / ₱ 25,000.00"
                        android:textColor="#000000"
                        android:textSize="18sp" />
                </RelativeLayout>

            </LinearLayout>
        </ScrollView>

        <!-- Footer -->
        <View
            android:id="@+id/footer_green_rect"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="22dp"
            android:background="@drawable/green_rectangle" />

        <ImageView
            android:id="@+id/plus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@id/footer_green_rect"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="82dp"
            android:contentDescription="Plus"
            android:src="@drawable/plus" />

        <TextView
            android:id="@+id/createfndraiser"
            android:layout_width="210dp"
            android:layout_height="73dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="112dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="61dp"
            android:layout_marginBottom="23dp"
            android:elevation="200dp"
            android:fontFamily="@font/nats"
            android:gravity="center"
            android:text="Create Fundraising"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
